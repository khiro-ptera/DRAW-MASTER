<script type="module" src="/javascripts/deal.js"></script>
<h2>{{storage.name}}</h2>
<div>Storage uploader: {{storage.user.username}}</div>
<br>
<div>
    <div>Decklist:</div>
    <ol>
        {{#each cards as |a|}}
            <li>{{name}}</li>
        {{/each}}
    </ol>
</div>
<br>
<form method="POST" action="">
    <div>Test Hand</div>
	<div>
		<label for="num">Number of cards to deal:</label>
		<input type="number" id="num" name="num" value="">
	</div>
    <button type="button" onclick="deal()">Deal!</button>
	<input type="submit" id="start-deal" value="Deal!">
</form>

<div id="cards">
    
</div>
